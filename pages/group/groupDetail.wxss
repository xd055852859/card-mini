/* pages/card/groupDetail.wxss */

@import "group.wxss";
@import "../card/index.wxss";
page{
  height:100%;
}
.container {
  height:auto;
  justify-content:flex-start;
}

.setIcon {
  width: 50rpx;
  height: 50rpx;
}
.group{
  width:100%;
  padding-left:5%;
  margin:0rpx;
  box-sizing: border-box;
}
.groupInfoName {
  color: #fff;
}

.groupInfo {
  border-bottom: 0px;
  color: #fff;
  background: #37363d;
}

.groupInfoMsg {
  flex: 0 0 70%;
}

.groupInfoNum {
  color: #fff;
}

.groupMemberContent {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #f3f2f7;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.search {
  width: 90%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border: 1px solid #dadada;
  border-radius: 8rpx;
  margin: 30rpx 0;
}

.searchInput {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 34rpx;
}

.groupContent {
  background: #fff;
}

.shareContent {
  width: 100%;
  height: 140rpx;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  display: flex;
  justify-content: center;
  background: #f9f9f9;
}
.white {
  width: 100%;
  height: 140rpx;
}

.gotoMain {
  position: fixed;
  right: 37rpx;
  bottom: 180rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 8rpx #666;
}

.gotoMain image {
  width: 100%;
  height: 100%;
  display: block
}

.ics {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}