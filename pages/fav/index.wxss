/* pages/fav/index.wxss */

.cardCon{padding:20rpx 30rpx;}
.cardCon .eachitems{padding:20rpx 0;position: relative}
.cardCon .eachitems:after{ content: ''; display:block; position: absolute; width: 100%; left: 0px; bottom: 0px;height: 1px; background-color: #E5E5E5; -webkit-transform: scaleY(0.5); transform: scaleY(0.5);}
.cardCon .eachitems .header{width:90rpx;height:90rpx;margin-right:25rpx;}
.cardCon .eachitems .header image{width:100%;height:100%;}
.cardCon .eachitems  .navgt{display: flex;}
.cardCon .eachitems .details{flex: 1;font-size: 28rpx;flex-direction: column;justify-content: space-between;display:flex;overflow:hidden;}
.cardCon .eachitems .dis{display: flex;align-items: center;color:#222;}
.cardCon .eachitems .com{font-size: 26rpx;color:#999;max-width:79%;overflow: hidden;text-overflow: ellipsis;white-space:nowrap;}
.cardCon .eachitems .dis .name{font-size: 36rpx;margin-right:20rpx;color:#444;max-width:53%;overflow: hidden;text-overflow: ellipsis;white-space:nowrap;}
.cardCon .eachitems .dis .pos{color:#999;padding:0;height:40rpx;line-height: 44rpx;max-width:20%;overflow: hidden;text-overflow: ellipsis;white-space:nowrap;}
.cardCon .eachitems .iconsChange{position: absolute;right:0;top:30rpx;background:#222;width:100rpx;height:50rpx;background:#5095FA;color:#fff;border-radius: 10rpx;font-size: 28rpx;text-align: center;line-height: 50rpx;}

.noDataCon{color:#b2b2b2;font-size: 24rpx;text-align: center;}
.noDataCon .tipImg{width:292rpx;height:252rpx;margin:60rpx 30rpx 30rpx;}